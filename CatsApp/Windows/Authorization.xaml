<Window x:Name="authorization" x:Class="CatsApp.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatsApp.Windows"
        mc:Ignorable="d"
        Title="Котокафе" Height="450" Width="700" MinHeight="450" MinWidth="700">
    <Grid Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="225,72,0,0" >Введите логин:</Label>
        <TextBox x:Name="LoginTb" Grid.Row="0" VerticalAlignment="Bottom" ></TextBox>
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="225,26,0,0" >Введите пароль:</Label>
        <TextBox x:Name="PasswordTb" Grid.Row="1" VerticalAlignment="Center" ></TextBox>
        <Button x:Name="AuthBtn" Grid.Row="2" Content="Авторизоваться" VerticalAlignment="Top" Click="AuthBtn_Click"></Button>
        <Button x:Name="ToRegBtn" Grid.Row="2" Content="Регистрация" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="ToRegBtn_Click" ></Button>
        
    </Grid>
</Window>
