            <Button x:Name="AboutBtn" Width="200" Content="О программе" Click="AboutBtn_Click"></Button>
        </WrapPanel>
        <Image Grid.Row="1" Grid.ColumnSpan="2" Source="C:\Users\ladyz\OneDrive\Рабочий стол\Курсовая\CatsApp\Resources\catsapp.jpg"></Image>
